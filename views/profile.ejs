<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Profile</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/profile.css"
  </head>
  <body>
    <div class="container-personalized">
      <div class="card-personalized">
        <div class="profile-picture">
          <img
            src="https://images.unsplash.com/photo-1704278921589-ac35120085dd?q=80&w=1964&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
            alt="Profile Picture"
          />
        </div>
        <h2 class="name"><%= user.fullname || fullname %></h2>
        <h3 class="username">@<%= user.username || username%></h3>
        <p class="tagline">user.tagline</p>
        <p class="description">description</p>
        <a href="/logout" class="button">Logout</a>
        <form action="/upload" method="post" enctype="multipart/form-data">
          <input
            type="text"
            name="filecaption"
            placeholder="insert image caption"
          />
          <input type="file" name="file" />
          <button type="submit">Upload</button>
        </form>
      </div>
    </div>
    <div class="container">
      <% if (user && user.pins && user.pins.length > 0) { %> <% %>
      <div class="cards flex">
        <%user.pins.forEach((pin) => {%>
        <div class="card" style="width: 18rem">
          <img
            src="/images/uploads/<%= pin.imageUrl %>"
            class="card-img-top"
            alt="..."
          />
          <div class="card-body">
            <h5 class="card-title"><%= pin.title %></h5>
          </div>
        </div>
        <% }) %>
      </div>
      <% } else { %>
      <p>No pins available.</p>
      <% } %>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
